<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.pocketplant.fragments.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/addPlantFragment"
        android:name="com.example.pocketplant.fragments.AddPlantFragment"
        android:label="Add Plant">

        <action
            android:id="@+id/action_addPlantFragment_to_plantDetailFragment"
            app:destination="@id/plantDetailFragment" />
    </fragment>


    <fragment
        android:id="@+id/plantDetailFragment"
        android:name="com.example.pocketplant.fragments.PlantDetailFragment"
        android:label="Plant Detail" />
</navigation>
